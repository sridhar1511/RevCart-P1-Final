FROM node:18-alpine

# Install libatomic for Node.js compatibility
RUN apk add --no-cache libatomic

WORKDIR /app

COPY revcart/frontend/package*.json ./
RUN npm install

COPY revcart/frontend/ .
RUN npm run build

# Install nginx
RUN apk add --no-cache nginx

# Copy built files
RUN mkdir -p /usr/share/nginx/html && cp -r dist/revcart/* /usr/share/nginx/html/

# Copy nginx config
COPY revcart/frontend/nginx.conf /etc/nginx/nginx.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]